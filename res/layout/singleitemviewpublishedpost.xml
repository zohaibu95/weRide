<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/countrylabel"
        android:layout_alignRight="@+id/country"
        android:layout_alignTop="@+id/ranklabel"
        android:layout_toRightOf="@+id/ranklabel" />

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/populationlabel"
        android:layout_alignRight="@+id/carpoolmemberbutton"
        android:layout_alignTop="@+id/countrylabel"
        android:layout_toRightOf="@+id/countrylabel" />

    <TextView
        android:id="@+id/population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/posternamelabel"
        android:layout_alignRight="@+id/country"
        android:layout_alignTop="@+id/populationlabel"
        android:layout_toRightOf="@+id/populationlabel" />

    <!--
    <ImageView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#000000"
        android:padding="1dp" />
    -->

    <TextView
        android:id="@+id/posterphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/posterphonelabel"
        android:layout_alignTop="@+id/posterphonelabel"
        android:layout_toRightOf="@+id/posterphonelabel" />

    <TextView
        android:id="@+id/postername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/posterphonelabel"
        android:layout_alignRight="@+id/population"
        android:layout_alignTop="@+id/posternamelabel"
        android:layout_toRightOf="@+id/posternamelabel" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/descriptionlabel"
        android:layout_alignTop="@+id/descriptionlabel"
        android:layout_toRightOf="@+id/posternamelabel"
        android:text="" />

    <Button
        android:id="@+id/carpoolmemberbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/publishedpostcommentbutton"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/descriptionlabel"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/red"
        android:text="View Members" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/publishedpostcommentbutton"
        android:layout_marginTop="10dp"
        android:background="@color/red"
        android:text="Delete Carpool" />

    <TextView
        android:id="@+id/ranklabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/publishedpostcommentbutton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="Departure Time : "
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/countrylabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ranklabel"
        android:layout_below="@+id/ranklabel"
        android:layout_marginTop="15dp"
        android:text="Start Point : "
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/populationlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/posterphonelabel"
        android:layout_below="@+id/countrylabel"
        android:layout_marginTop="15dp"
        android:text="Destination : "
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/posternamelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/countrylabel"
        android:layout_below="@+id/populationlabel"
        android:layout_marginTop="14dp"
        android:text="Poster Name : "
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descriptionlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/posterphonelabel"
        android:layout_below="@+id/posterphonelabel"
        android:layout_marginTop="14dp"
        android:text="Description : "
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/publishedpostcommentbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button03"
        android:layout_alignRight="@+id/Button03"
        android:layout_below="@+id/carpoolmemberbutton"
        android:layout_marginTop="10dp"
        android:background="@color/red"
        android:text="View Comments" />

    <TextView
        android:id="@+id/posterphonelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/posternamelabel"
        android:layout_below="@+id/posternamelabel"
        android:layout_marginTop="16dp"
        android:text="Poster Phone # : "
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>